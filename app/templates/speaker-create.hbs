<div class="container h-100">
  <div class="htop">
    <h2 class="text-center">Добавление спикера</h2>
    <form class="edit-form" onsubmit={{action "saveSpeaker"}}>
      <div class="form-group row">
        <label for="inputSurname" class="col-sm-2 col-form-label text-right">Фамилия</label>
        <div class="col-sm-10">
          {{input type="text" class="form-control form-control-lg" id="inputSurname" placeholder="Введите фамилию" value=model.lastName}}
        </div>
      </div>
      <div class="form-group row">
        <label for="inputName" class="col-sm-2 col-form-label text-right">Имя</label>
        <div class="col-sm-10">
          {{input type="text" class="form-control form-control-lg" id="inputName" placeholder="Введите имя" value=model.firstName}}
        </div>
      </div>
      <div class="form-group row">
        <label for="inputPatronymic" class="col-sm-2 col-form-label text-right big">Отчество</label>
        <div class="col-sm-10">
          {{input type="text" class="form-control form-control-lg" id="inputPatronymic" placeholder="Введите отчество" value=model.patronymic}}
        </div>
      </div>
      <div class="form-group row">
        <div class="col-12 text-right">
          <button type="submit" class="btn btn-primary btn-lg">Сохранить</button>
          {{#link-to "speakers" class="btn btn-outline-secondary btn-lg"}}Отмена{{/link-to}}
        </div>
      </div>
    </form>
  </div>
</div>